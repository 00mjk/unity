<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection, Microsoft.Practices.Unity.Configuration" />
  </configSections>

  <unity>
    <typeAliases>
      <typeAlias alias="singleton" type="Microsoft.Practices.Unity.ContainerControlledLifetimeManager, Microsoft.Practices.Unity" />
      <typeAlias alias="external" type="Microsoft.Practices.Unity.ExternallyControlledLifetimeManager, Microsoft.Practices.Unity" />
      <typeAlias alias="session" type="Microsoft.Practices.Unity.TestSupport.SessionLifetimeManager, Unity.TestSupport" />
      <typeAlias alias="ILogger" type="Microsoft.Practices.Unity.TestSupport.ILogger, Unity.TestSupport" />
      <typeAlias alias="MockLogger" type="Microsoft.Practices.Unity.TestSupport.MockLogger, Unity.TestSupport" />
    </typeAliases>
    <containers>
      <container>
        <types>
          <type type="ILogger"
                mapTo="Microsoft.Practices.Unity.TestSupport.SpecialLogger, Unity.TestSupport">
            <lifetime type="singleton" />
          </type>
          <type type="ILogger" mapTo="MockLogger" name="mock">
            <lifetime type="external" />
          </type>
          <type type="ILogger" mapTo="MockLogger" name="session">
            <lifetime type="Microsoft.Practices.Unity.TestSupport.SessionLifetimeManager, Unity.TestSupport"
                      value="sessionKey" />
          </type>
          <type type="ILogger" mapTo="MockLogger" name="reverseSession">
            <lifetime type="session" value="backwards" typeConverter="Microsoft.Practices.Unity.TestSupport.ReversedSessionKeyTypeConverter, Unity.TestSupport" />
          </type>

          <type type="ILogger" mapTo="MockLogger" name="transient"/>

          <type type="ILogger" mapTo="MockLogger" name="explicitTransient">
            <lifetime type="" />
          </type>
          
        </types>

      </container>
    </containers>
  </unity>
</configuration>
